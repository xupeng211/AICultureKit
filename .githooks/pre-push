#!/bin/bash

# AICultureKit 轻量级推送前检查钩子
# 仅执行快速测试和基础格式化，重度检查交由CI处理

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}🚀 执行轻量级推送前检查...${NC}"

# 1. 运行 pre-commit 钩子 (自动修复型检查)
echo -e "\n${BLUE}🎨 运行 pre-commit 自动修复与格式化检查...${NC}"
if ! pre-commit run --all-files; then
    echo -e "${RED}❌ pre-commit 检查失败。请修复上述问题后再推送。${NC}"
    echo -e "${YELLOW}💡 提示：大部分问题可通过 'pre-commit run --all-files' 自动修复。${NC}"
    exit 1
fi
echo -e "${GREEN}✅ pre-commit 检查通过。${NC}"

# 2. 运行快速测试集 (非慢速、非端到端、非集成测试)
echo -e "\n${BLUE}🧪 运行快速测试集...${NC}"
if ! pytest -q -k "not slow and not e2e and not integration" --maxfail=1; then
    echo -e "${RED}❌ 快速测试失败，推送被阻止。${NC}"
    echo -e "${YELLOW}💡 请修复测试问题后再推送。重量级测试将由CI执行。${NC}"
    exit 1
fi
echo -e "${GREEN}✅ 快速测试通过。${NC}"

# 3. 检查敏感信息 (仅警告，不阻塞)
echo -e "\n${BLUE}🔒 检查最近提交的敏感信息 (仅警告)...${NC}"
sensitive_patterns=("password" "secret" "token" "api_key" "private_key")
found_secrets=false
for pattern in "${sensitive_patterns[@]}"; do
    # 只检查最近的几次提交，避免扫描整个历史
    if git log --oneline -n 10 | xargs -n 1 git show | grep -iE "$pattern" > /dev/null; then
        echo -e "${YELLOW}⚠️  警告：最近10次提交中可能包含敏感信息关键词: $pattern${NC}"
        found_secrets=true
    fi
done

if [ "$found_secrets" = true ]; then
    echo -e "${YELLOW}💡 请仔细检查您的提交，确保没有意外泄露敏感信息。此警告不阻止推送。${NC}"
else
    echo -e "${GREEN}✅ 未在最近提交中发现明确的敏感信息关键词。${NC}"
fi

echo -e "\n${GREEN}🚀 本地轻量级检查通过，允许推送。更严格的检查将由CI执行。${NC}"
exit 0
